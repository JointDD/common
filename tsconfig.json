{
  "compilerOptions": {
    "allowJs": true,                       
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",                     
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",                     
    "moduleResolution": "node",
    "noImplicitThis": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,                     
    "strict": true,                           
    "target": "es5",
    "declaration": true                          
  }
}
